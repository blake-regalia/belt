  "license": "ISC",
  "author": {
    "name": "Blake Regalia",
    "email": "blake.regalia@gmail.com"
  },
  "type": "module",
  "main": "dist/cjs/main.cjs",
  "module": "dist/mjs/main.js",
  "types": "dist/mjs/main.d.ts",
  "exports": {
    "require": "./dist/cjs/main.cjs",
    "import": "./dist/mjs/main.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:mjs": "tsc -p tsconfig.mjs.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && bash scripts/cjs-fix.sh",
    "build": "pnpm run build:mjs && pnpm run build:cjs",
    "bundle": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "test": "pnpm run build && bun test ./test/*.ts"
  },
  "devDependencies": {
    "@blake.regalia/tsconfig": "^0.3.7",
    "@jest/globals": "^30.0.5",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.2.0",
    "@types/web": "^0.0.259",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "rollup": "^4.46.2",
    "ts-node": "^10.9.2",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@blake.regalia/eslint-config-elite": "^0.5.22",
    "globals": "^16.3.0"
  }
}
